	defer m.skeleton.TriggerUpdate()

	m.status.SetProgressMessage("Checking your token...")
	m.skeleton.LockTabs()

	_, err := m.github.GetAuthUser(ctx)
	if err != nil {
		m.handleConnectionError(err)
		return
	}

	m.handleSuccessfulConnection()
}

